<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_light"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/tv_listview_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/primary_text"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_alignTop="@+id/iv_listview"
            android:layout_toRightOf="@+id/iv_listview"
            android:layout_toEndOf="@+id/iv_listview"
            android:layout_marginRight="15dp" />

        <fraiburgo.ifc.edu.br.utils.CircularImageView
            android:id="@+id/iv_listview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </fraiburgo.ifc.edu.br.utils.CircularImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/tv_listview_item_subtitle"
            android:layout_below="@+id/tv_listview_item_title"
            android:layout_toRightOf="@+id/iv_listview"
            android:layout_alignRight="@+id/tv_listview_item_title"
            android:layout_alignEnd="@+id/tv_listview_item_title"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:paddingBottom="20dp"
            android:layout_alignBottom="@+id/iv_listview" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:src="@drawable/views"
            android:layout_below="@+id/tv_listview_item_subtitle"
            android:layout_toRightOf="@+id/iv_listview"
            android:layout_toEndOf="@+id/iv_listview"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="150"
            android:id="@+id/tv_postitem_numviews"
            android:gravity="fill_vertical"
            android:textColor="@color/primary_text"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:src="@drawable/comments"
            android:layout_alignTop="@+id/tv_postitem_numviews"
            android:layout_toRightOf="@+id/tv_postitem_numviews"
            android:layout_toEndOf="@+id/tv_postitem_numviews"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="150"
            android:id="@+id/tv_postitem_numcomments"
            android:gravity="fill_vertical"
            android:textColor="@color/primary_text"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="13/07/2015"
            android:id="@+id/tv_postitem_data"
            android:layout_alignBottom="@+id/tv_postitem_numcomments"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_listview_item_subtitle"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

</RelativeLayout>